// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  // Ingen relation till Item l√§ngre
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  quantity    Int
  category    String

  userId      Int?     // Nullable userId utan relation till User
}



